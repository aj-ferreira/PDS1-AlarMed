<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ícone de status -->
        <ImageView
            android:id="@+id/iconeStatus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/green_500"
            tools:src="@drawable/ic_check_circle" />

        <!-- Informações do histórico -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nome do medicamento -->
            <TextView
                android:id="@+id/txtNomeMedicamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_700"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Paracetamol 500mg" />

            <!-- Status -->
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/green_600"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Tomado" />

            <!-- Data e hora -->
            <TextView
                android:id="@+id/txtDataHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray_500"
                android:textSize="13sp"
                tools:text="11 de Setembro de 2025 às 08:30" />

            <!-- Observação (opcional) -->
            <TextView
                android:id="@+id/txtObservacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray_600"
                android:textSize="12sp"
                android:textStyle="italic"
                android:visibility="gone"
                tools:text="Observação: Tomado com alimento"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
