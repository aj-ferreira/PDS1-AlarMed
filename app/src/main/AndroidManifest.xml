<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alarmed"
        tools:targetApi="31"
        tools:ignore="RtlEnabled">
        <activity
            android:name=".ui.medicamentos.list.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Alarmed.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.medicamentos.addedit.AddEditMedicamentoActivity"
            android:label="Adicionar Medicamento"
            android:parentActivityName=".ui.medicamentos.list.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.medicamentos.list.MainActivity" />
        </activity>
        <activity
            android:name=".ui.horario.HorarioActivity"
            android:label="Definir Horário"
            android:parentActivityName=".ui.medicamentos.list.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.medicamentos.list.MainActivity" />
        </activity>
        <activity
            android:name=".ui.historico.HistoricoActivity"
            android:label="Histórico de Medicamentos"
            android:parentActivityName=".ui.medicamentos.list.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.medicamentos.list.MainActivity" />
        </activity>

        <receiver
            android:name=".alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".alarm.HistoryUpdateServiceNew"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>